# Environment Variables Template
# Copy this file to .env and fill in your actual values

# Pinata Configuration (for IPFS storage)
PINATA_JWT=your_pinata_jwt_token_here
PINATA_API_KEY=your_pinata_api_key_here
PINATA_SECRET_API_KEY=your_pinata_secret_api_key_here

# AWS Configuration (for S3 storage - optional)
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key_here
AWS_BUCKET_NAME=your_bucket_name_here
AWS_REGION=your_aws_region_here

# Application Configuration
FLASK_ENV=production
FLASK_DEBUG=False

# Shutter Network Configuration
SHUTTER_API_BASE=https://shutter-api.chiado.staging.shutter.network/api
SHUTTER_REGISTRY_ADDRESS=0x2693a4Fb363AdD4356e6b80Ac5A27fF05FeA6D9F
SHUTTER_BEARER_TOKEN=your_shutter_bearer_token_here
